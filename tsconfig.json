{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
      "module": "commonjs",
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["ESNext"],
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "ES2020",
      "outDir": "./dist",
      "allowJs": true,
      "declaration": false
    },
    "include": ["src/*.ts", "tests/*.ts"],
    "exclude": [
      "node_modules/**/*",
      ".vscode/**/*"
    ],
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    }
  }
  